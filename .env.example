# Environment Variables for SWP391 Project

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/student-management

# JWT Configuration
JWT_SECRET=super-secure-jwt-secret-key-replace-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=*

# Session Configuration
SESSION_SECRET=super-secure-session-secret-replace-in-production

# Rate Limiting
THROTTLE_TTL=60 # Time window in seconds
THROTTLE_LIMIT=10 # Maximum number of requests within the time window
